<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>

    <appender name="consoleAppender" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p %C{1}:%M:%L - %m%n"/>
        </layout>
    </appender>

    <appender name="fileAppender" class="org.apache.log4j.RollingFileAppender">
        <param name="maxFileSize" value="10MB"/>
        <param name="maxBackupIndex" value="2"/>
        <param name="file" value="src/test/resources/logs/logfile.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                   value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%C{1}:%M:%L - %m%n"/>
        </layout>
    </appender>

    <category name="com.epam.jwd.core_final">
        <!--Options: all, trace, debug, info, warn, error, fatal-->
        <priority value="fatal"/>
        <appender-ref ref="consoleAppender"/>
        <appender-ref ref="fileAppender"/>
    </category>

    <category name="com.epam.jwd.core_final.criteria" additivity="false">
        <!--Options: all, trace, debug, info, warn, error, fatal-->
        <priority value="debug"/>
        <appender-ref ref="consoleAppender"/>
        <appender-ref ref="fileAppender"/>
    </category>

    <category name="com.epam.jwd.core_final.util" additivity="false">
        <!--Options: all, trace, debug, info, warn, error, fatal-->
        <priority value="fatal"/>
        <appender-ref ref="consoleAppender"/>
        <appender-ref ref="fileAppender"/>
    </category>

    <category name="com.epam.jwd.core_final.domain.RankTest" additivity="false">
        <!--Options: all, trace, debug, info, warn, error, fatal-->
        <priority value="fatal"/>
        <appender-ref ref="consoleAppender"/>
    </category>

</log4j:configuration>